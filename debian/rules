#!/usr/bin/make -f

DEB_DH_GENCONTROL_ARGS_ALL = $(shell if [ -f "../.VYATTA_DEV_BUILD" ]; then \
                                       echo "-- -v999.dev"; fi)

include /usr/share/cdbs/1/rules/debhelper.mk

pre-build::
	rm -f debian/files
	chmod +x init mkinitramfs
	chmod +x hooks/*
	for x in `find scripts/ -maxdepth 1 -type d | tail -n+2`; do \
	  chmod -R +x $$x; \
	done
